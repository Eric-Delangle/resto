{% extends 'base.html.twig' %}

{% block title %}Menu
{% endblock %}

{% block body %}
	<h1 class="text-center mt-5">Menu</h1>
	<div class="container">
		<table class="table mt-5">
			<tbody>

				<tr>
					<th>Nom du menu</th>
					<td>{{ menu.name }}</td>
				</tr>
				<tr>
					<th>Entree</th>
					<td>{{ menu.entree }}</td>
				</tr>
				<tr>
					<th>Plat</th>
					<td>{{ menu.plat }}</td>
				</tr>
				<tr>
					<th>Fromage</th>
					<td>{{ menu.fromage }}</td>
				</tr>
				<tr>
					<th>Dessert</th>
					<td>{{ menu.dessert }}</td>
				</tr>
				<tr>
					<th>Boisson</th>
					<td>{{ menu.boisson }}</td>
				</tr>
				<tr>
					<th>Prix</th>
					<td>{{ menu.price }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('menu_index') }}">Liste des menus</a>

		{# 	<a href="{{ path('menu_edit', {'id': menu.id}) }}">edit</a> #}

		{# 	{{ include('menu/_delete_form.html.twig') }} #}

	</div>

{% endblock %}
