{% extends 'base.html.twig' %}


{% block title %}Contact
{% endblock %}

{% block body %}
	<!-- Contact -->

	<div class="container text-center">


		<h2 class="mt-3">Contactez nous</h2>
		<p>Nous vous répondrons dans les meilleurs delais.
		</p>


		<div>
			{{ form_start(form)}}
			{{ form_row(form.name, {'label': 'Nom','attr': {'placeholder': "Votre nom"}})}}
			{{ form_row(form.email, {'attr': {'placeholder': "Votre email"}})}}
			{{ form_row(form.subject, {'label': 'Sujet','attr': {'placeholder': "Sujet de votre message"}})}}
			{{ form_row(form.message, {'attr': {'placeholder': "Votre message"}})}}<!-- captcha -->
			<!-- Notre boite de vérification --><div class="g-recaptcha" data-sitekey=""> </div>
			<!-- fin captcha -->

			<button type="submit" class="btn btn-success btn-lg btn-block">Envoyer un message</button>


			{{ form_end(form)}}

		</div>
	</div>
</div></div></div>{% endblock %}
